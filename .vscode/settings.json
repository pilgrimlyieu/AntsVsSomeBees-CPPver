{
  "C_Cpp.autoAddFileAssociations": false,
  "C_Cpp.doxygen.generatedStyle": "/**",
  "C_Cpp.files.exclude": {
    "**/.vscode": true,
    "dependencies/asio.hpp": true,
    "dependencies/asio/*": true,
    "dependencies/crow.h": true,
    "dependencies/crow/*": true
  },
  // "xmake.runMode": "buildRun", // 有点问题
  "C_Cpp.formatting": "clangFormat",
  "C_Cpp.intelliSenseEngine": "enabled",
  "C_Cpp.markdownInComments": "enabled",
  "clangd.arguments": [
    "--background-index",
    "--clang-tidy",
    "-j=16"
  ],
  "editor.detectIndentation": false,
  "errorLens.codeLensEnabled": true,
  "errorLens.enabledDiagnosticLevels": [
    "error",
    "warning",
    "info",
    "hint"
  ],
  "targetName": "Avsb",
  "xmake.debugConfigType": "codelldb",
  "xmake.debuggingTargetsArguments": {
    "default": ["-d", "normal", "-f", "999", "-l", "0"]
  },
  // "xmake.runMode": "buildRun", // 有点问题
}
