{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Debug",
            "type": "shell",
            "command": "sh",
            "args": [
                "-c",
                "xmake f -m debug && xmake build ${config:targetName}"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                ""
            ]
        },
        {
            "label": "Build Release",
            "type": "shell",
            "command": "sh",
            "args": [
                "-c",
                "xmake f -m release && xmake build ${config:targetName}; xmake f -m debug"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                ""
            ]
        },
        {
            "label": "Build Check",
            "type": "shell",
            "command": "sh",
            "args": [
                "-c",
                "xmake f -m check && xmake build ${config:targetName}; xmake f -m debug"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                ""
            ]
        },
        {
            "label": "Build Test",
            "type": "shell",
            "command": "xmake",
            "args": [
                "test"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                ""
            ]
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "xmake",
            "args": [
                "clean",
                "--all"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "xmake",
            "args": [
                "run",
                "${config:targetName}"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": [
                "Build Debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Generate Documnet",
            "type": "shell",
            "command": "xmake",
            "args": [
                "doxygen",
                "-o",
                "doc"
            ],
            "group": "doc",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Open Documnet",
            "type": "shell",
            "command": "C:/Program Files (x86)/Microsoft/Edge/Application/msedge.exe",
            "args": [
                "'${workspaceFolder}/doc/html/index.html'"
            ],
            "group": "doc",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": [
                "Generate Documnet"
            ],
            "problemMatcher": []
        },
    ]
}