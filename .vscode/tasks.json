{
  "tasks": [
    {
      "args": ["-c", "xmake f -m debug && xmake build ${config:targetName}"],
      "command": "sh",
      "group": "build",
      "label": "Build Debug",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [""],
      "type": "shell"
    },
    {
      "args": [
        "-c",
        "xmake f -m release && xmake build ${config:targetName}; xmake f -m debug"
      ],
      "command": "sh",
      "group": "build",
      "label": "Build Release",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [""],
      "type": "shell"
    },
    {
      "args": [
        "-c",
        "xmake f -m check && xmake build ${config:targetName}; xmake f -m debug"
      ],
      "command": "sh",
      "group": "build",
      "label": "Build Check",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [""],
      "type": "shell"
    },
    {
      "args": ["test"],
      "command": "xmake",
      "group": "build",
      "label": "Build Test",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [""],
      "type": "shell"
    },
    {
      "args": ["clean", "--all"],
      "command": "xmake",
      "group": "build",
      "label": "Clean",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "type": "shell"
    },
    {
      "args": ["run", "${config:targetName}"],
      "command": "xmake",
      "dependsOn": ["Build Debug"],
      "group": {
        "isDefault": true,
        "kind": "test"
      },
      "label": "Run",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "type": "shell"
    },
    {
      "args": ["doxygen", "-o", "doc"],
      "command": "xmake",
      "group": "doc",
      "label": "Generate Documnet",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "type": "shell"
    },
    {
      "args": ["'${workspaceFolder}/doc/html/index.html'"],
      "command": "start",
      "dependsOn": ["Generate Documnet"],
      "group": "doc",
      "label": "Open Documnet",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "type": "shell"
    }
  ],
  "version": "2.0.0"
}
