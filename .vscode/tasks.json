{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Debug",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "xmake f -m debug && xmake build ${config:targetName}",
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [""]
    },
    {
      "label": "Build Release",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "xmake f -m release && xmake build ${config:targetName}",
      ],
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [""]
    },
    {
      "label": "Build Check",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "xmake f -m check && xmake build ${config:targetName}",
      ],
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [""]
    },
    {
      "label": "Clean",
      "type": "shell",
      "command": "xmake",
      "args": ["clean"],
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    }
